<scroll-loader
    action="{{url}}"
    value="tableData"
    bindinput="tableDataUpdate"
    extra="{{extra}}"
    lazy="{{lazy}}"
    id="scrollLoder">

    <view wx:for="{{tableData}}" wx:key="{{index}}">
        {{index}}文字文字文字
    </view>

    <card class="info--card" bindtap="toDetail">
        <text slot="header">标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题</text>
        <view class="info--card__body">
            <view class="info--body__left">
                <view>
                    <text>辛集市交通运输局</text>
                </view>
                <view>
                    <view class="iconfont icon-zuobiao"></view>
                    <text>河北省-石家庄市</text>
                </view>
            </view>
            <view class="info--body__right">
                <view class="price">￥68000</view>
                <view>2018-06-05</view>
            </view>
        </view>
        <view slot="footer" class="info--card__footer">

            <tag class="info-card" type="info">财政资金</tag>
            <tag class="info-card">新建项目</tag>
            <tag class="info-card" type="warn">项目启动</tag>
        </view>
    </card>

</scroll-loader>
