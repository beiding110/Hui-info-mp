<view class="weui-msg">
    <view class="weui-msg__icon-area">
        <icon type="{{iconType}}" size="80"></icon>
    </view>
    <view class="weui-msg__text-area">
        <h2 class="weui-msg__title">{{title}}</h2>
        <view class="weui-msg__desc">{{text}}</view>
    </view>
    <view class="weui-msg__opr-area">
        <view class="weui-btn-area">
            <view class="weui-flex">
                <view class="weui-flex__item sel-btn__flex">
                    <button type="primary" bindtap="goBack">返 回</button>
                </view>
                <view class="weui-flex__item sel-btn__flex" wx:if="{{!isVip}}">
                    <button type="warn" bindtap="goVipPay">购 买</button>
                </view>
            </view>
        </view>
    </view>

    <card class="info--card" wx:if="{{!isVip}}">
        <vip-table></vip-table>
    </card>

