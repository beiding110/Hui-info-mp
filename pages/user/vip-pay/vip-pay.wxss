.pay-banner{position:relative;}
.pay-banner image{width:100%;}

.pay-banner--text{position:absolute; left:10%; top:50%; transform:translateY(-50%); font-size:16px;}
.pay-banner--text view:first-child{font-size:20px; color:white;}
.pay-banner--text view:nth-child(2){color:white;}
.pay-banner--text view:nth-child(3){position:relative; color:#353535}
.pay-banner--text view:nth-child(3)::after{content:' '; position:absolute; width:100%; height:1px; background:#353535; left:0; top:50%; transform:rotate(4deg);}

.info--card__title{font-size:17px; color:#353535; text-align:center; font-weight:bold; line-height:2.5em;}
